<p>{{this.count}}</p>
<p>x {{this.mult}}</p>
<p>= {{this.total}}</p>


<button type="button" {{on "click" (fn this.change 1)}}>+1</button>
<button type="button" {{on "click" (fn this.change -1)}}>-1</button>
<button type="button" {{on "click" this.double}}>Double</button>
<button type="button" {{on "click" this.reset}}>Reset</button>

